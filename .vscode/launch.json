{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Strapi",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/@strapi/strapi/bin/strapi.js",
            "args": ["develop"],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "restart": true,
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Debug Strapi Build",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/@strapi/strapi/bin/strapi.js",
            "args": ["build"],
            "env": {
                "NODE_ENV": "production"
            },
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        }
    ]
}
